# Database Configuration
DB_HOST=localhost
DB_PORT=6543
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_NAME=nqkly_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# Application Configuration
NODE_ENV=development
PORT=3000

# Kudi SMS API Configuration
# Base URL for Kudi SMS API (typically https://api.kudisms.com/api/v1)
KUDI_SMS_API_URL=https://api.kudisms.com/api/v1
# Your Kudi SMS API key from https://kudisms.com dashboard
KUDI_SMS_API_KEY=your-kudi-sms-api-key
# Sender ID that appears on SMS (max 11 characters)
KUDI_SMS_SENDER_ID=NQkly

# Dojah API Configuration (KYC/BVN Verification)
# Base URL for Dojah API
DOJAH_BASE_URL=https://api.dojah.io
# Your Dojah App ID from https://dojah.io dashboard
DOJAH_APP_ID=your-dojah-app-id
# Your Dojah Secret Key from https://dojah.io dashboard
DOJAH_SECRET_KEY=your-dojah-secret-key

# Monnify API Configuration (Wallet & Payments)
# Production: https://api.monnify.com | Sandbox: https://sandbox.monnify.com
MONNIFY_BASE_URL=https://sandbox.monnify.com
# Your Monnify API Key from https://monnify.com dashboard
MONNIFY_API_KEY=your-monnify-api-key
# Your Monnify Secret Key from https://monnify.com dashboard
MONNIFY_SECRET_KEY=your-monnify-secret-key
# Your Monnify Contract Code from https://monnify.com dashboard
MONNIFY_CONTRACT_CODE=your-monnify-contract-code
